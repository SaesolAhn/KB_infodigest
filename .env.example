# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# AI Provider Configuration
# Choose one: "qwen" or "openai"
AI_PROVIDER=qwen

# Qwen API Configuration (required if AI_PROVIDER=qwen)
QWEN_API_KEY=your_qwen_api_key_here
QWEN_API_BASE_URL=https://dashscope-intl.aliyuncs.com/compatible-mode
QWEN_MODEL=qwen-flash

# OpenAI API Configuration (required if AI_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE_URL=https://api.openai.com
OPENAI_MODEL=gpt-4o-mini

# AI Generation Settings
AI_TEMPERATURE=0.3

# SQLite Database Configuration
# Database file will be created in the specified path
DB_PATH=data/infodigest.db

# Processing Limits
MAX_TEXT_LENGTH=100000
REQUEST_TIMEOUT=30

# Dashboard Authentication (optional but recommended for production)
# Set a secure password for the admin dashboard
# If not set, dashboard will be accessible without authentication (dev mode)
DASHBOARD_PASSWORD=your_secure_dashboard_password_here

# Logging Configuration (optional)
# Set to "true" for JSON output (production), "false" for console (development)
# LOG_JSON_FORMAT=false
# LOG_LEVEL=INFO
