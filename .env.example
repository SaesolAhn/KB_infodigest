# InfoDigest Bot Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Gemini API Key (get from Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model (optional, defaults to gemini-1.5-flash)
GEMINI_MODEL=gemini-1.5-flash

# MongoDB Connection (optional, defaults to localhost)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=infodigest
MONGODB_COLLECTION=digest_logs

# Processing Limits (optional)
MAX_TEXT_LENGTH=100000
REQUEST_TIMEOUT=30
